{
  "name": "comment-service-api",
  "version": "1.0.0",
  "description": "A complete RESTful API for comment system with authentication, nested replies, likes/dislikes, and real-time updates",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start:prod": "node ./dist/server.js",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prettier:fix": "prettier --write .",
    "lint-prettier": "npm run lint:check && npm run prettier:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comment": "jest --testPathPattern=comment",
    "test:auth": "jest --testPathPattern=auth",
    "test:user": "jest --testPathPattern=user",
    "prepare": "husky"
  },
  "author": "Backend Development Team",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.ts": "npm run lint-prettier"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.2",
    "http-status": "^1.7.4",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.12.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.9.0",
    "nodemailer": "^6.9.16",
    "prettier": "^3.4.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "vercel": "^50.1.3"
  }
}
